{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "7.0.3",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint .",
    "prettify": "prettier . --write",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "create-listening-server": "^2.1.0",
    "express": "^4.18.2",
    "find-up": "^7.0.0",
    "glob": "^10.3.10",
    "html-webpack-plugin": "^5.6.0",
    "playwright-core": "^1.41.2",
    "quill-delta": "^5.1.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "webpack-dev-middleware": "^7.0.0"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.41.2",
    "@ts-tools/webpack-loader": "^5.0.2",
    "@types/chai": "^4.3.11",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "chai": "^5.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "~5.3.3",
    "webpack": "^5.90.1"
  },
  "files": [
    "bin",
    "static",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-play.git"
}
