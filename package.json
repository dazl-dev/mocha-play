{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "2.0.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run build && npm run lint",
    "test": "npm run test:only",
    "test:only": "mocha \"./test/**/*.spec.ts\"",
    "lint": "eslint . -f codeframe",
    "typecheck": "tsc --noEmit",
    "mocha-play": "node -r @ts-tools/node/r ./src/cli.ts",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.2.0",
    "create-listening-server": "^1.0.0",
    "css-loader": "^6.3.0",
    "express": "^4.17.1",
    "find-up": "^5.0.0",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^5.3.2",
    "playwright-core": "^1.15.0",
    "style-loader": "^3.3.0",
    "webpack-dev-middleware": "^5.2.1"
  },
  "devDependencies": {
    "@ts-tools/node": "^3.0.1",
    "@ts-tools/webpack-loader": "^3.0.2",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "mocha": "^9.1.2",
    "playwright-chromium": "^1.15.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.4.3",
    "webpack": "^5.54.0"
  },
  "files": [
    "bin",
    "dist",
    "src",
    "static"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-play.git"
}
