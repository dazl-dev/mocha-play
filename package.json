{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "3.1.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint .",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "create-listening-server": "^1.0.0",
    "express": "^4.18.1",
    "find-up": "^6.3.0",
    "glob": "^8.0.3",
    "html-webpack-plugin": "^5.5.0",
    "playwright-core": "^1.27.0",
    "webpack-dev-middleware": "^5.3.3"
  },
  "devDependencies": {
    "@ts-tools/webpack-loader": "^4.0.0",
    "@types/chai": "^4.3.3",
    "@types/express": "^4.17.14",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "chai": "^4.3.6",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "mocha": "^10.0.0",
    "playwright-chromium": "^1.26.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.8.4",
    "webpack": "^5.74.0"
  },
  "files": [
    "bin",
    "static",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=14"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-play.git"
}
