{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "8.2.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint",
    "prettify": "prettier . --write",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "create-listening-server": "^2.1.0",
    "express": "^5.1.0",
    "find-up": "^8.0.0",
    "glob": "^11.0.3",
    "html-webpack-plugin": "^5.6.4",
    "playwright-core": "^1.56.1",
    "webpack-dev-middleware": "^7.4.5"
  },
  "devDependencies": {
    "@playwright/browser-chromium": "^1.56.1",
    "@ts-tools/webpack-loader": "^6.1.0",
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "20",
    "chai": "^6.2.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.2",
    "webpack": "^5.102.1"
  },
  "files": [
    "bin",
    "static",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dazl-dev/mocha-play.git"
  }
}
