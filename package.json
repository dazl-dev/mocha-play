{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "5.0.1",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint .",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "commander": "^10.0.1",
    "create-listening-server": "^2.1.0",
    "express": "^4.18.2",
    "find-up": "^6.3.0",
    "glob": "^10.2.3",
    "html-webpack-plugin": "^5.5.1",
    "playwright-core": "^1.33.0",
    "webpack-dev-middleware": "^6.1.0"
  },
  "devDependencies": {
    "@ts-tools/webpack-loader": "^4.0.0",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "chai": "^4.3.7",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.2.0",
    "playwright-chromium": "^1.33.0",
    "rimraf": "^5.0.0",
    "typescript": "~5.0.4",
    "webpack": "^5.82.0"
  },
  "files": [
    "bin",
    "static",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=14"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-play.git"
}
