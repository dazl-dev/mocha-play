{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "2.0.2",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "pretest": "npm run build && npm run lint",
    "test": "npm run test:only",
    "test:only": "mocha \"./test/**/*.spec.ts\"",
    "lint": "eslint . -f codeframe",
    "typecheck": "tsc --noEmit",
    "mocha-play": "node -r @ts-tools/node/r ./src/cli.ts",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^8.0.0",
    "create-listening-server": "^1.0.0",
    "css-loader": "^5.2.6",
    "express": "^4.17.1",
    "find-up": "^5.0.0",
    "glob": "^7.1.7",
    "html-webpack-plugin": "^5.3.2",
    "playwright-core": "^1.12.3",
    "style-loader": "^3.0.0",
    "webpack-dev-middleware": "^5.0.0"
  },
  "devDependencies": {
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.19",
    "@types/express": "^4.17.12",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "12",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "mocha": "^9.0.1",
    "playwright-chromium": "^1.12.3",
    "rimraf": "^3.0.2",
    "strip-ansi": "^6.0.0",
    "typescript": "~4.3.4",
    "webpack": "^5.40.0"
  },
  "files": [
    "bin",
    "dist",
    "src",
    "static"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-play.git"
}
