{
  "name": "mocha-play",
  "description": "Run mocha tests in chromium, using webpack and playwright.",
  "version": "3.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "mocha-play": "bin/mocha-play.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint .",
    "prepack": "npm run build"
  },
  "peerDependencies": {
    "mocha": ">=7",
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.2.0",
    "create-listening-server": "^1.0.0",
    "css-loader": "^6.4.0",
    "express": "^4.17.1",
    "find-up": "^6.2.0",
    "glob": "^7.2.0",
    "html-webpack-plugin": "^5.4.0",
    "playwright-core": "^1.15.2",
    "style-loader": "^3.3.0",
    "webpack-dev-middleware": "^5.2.1"
  },
  "devDependencies": {
    "@ts-tools/webpack-loader": "^3.0.2",
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "12",
    "@types/webpack-dev-middleware": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "chai": "^4.3.4",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "mocha": "^9.1.3",
    "playwright-chromium": "^1.15.2",
    "rimraf": "^3.0.2",
    "typescript": "~4.4.4",
    "webpack": "^5.59.0"
  },
  "files": [
    "bin",
    "static",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "engines": {
    "node": ">=12"
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/mocha-play.git"
}
